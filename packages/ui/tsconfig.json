{
  "extends": "tsconfig/_base.json", // ルートの設定を継承
  "compilerOptions": {
    "jsx": "react",
    // "outDir" と "rootDir" の設定は不要、またはTurborepoの設定に依存
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/*"]
    }
  },
  "include": ["src", "*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules"]
}
